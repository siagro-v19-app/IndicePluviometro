<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		title="Unidade de Medida"
		class="sapUiPopupWithPadding sapUiSizeCompact"
		items="{path: '/UnidadeMedidas', sorter: {path: 'Sigla'}}"
		search="_handleValueHelpSearch"
		confirm="_handleValueHelpClose"
		cancel="_handleValueHelpClose">
		<ColumnListItem>
			<cells>
				<ObjectNumber
					number="{Id}"/>
				<ObjectIdentifier
					title="{Descricao}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column width="6em">
				<header>
					<Text text="ID"/>
				</header>
			</Column>
			<Column width="12em">
				<header>
					<Text text="Descrição"/>
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>